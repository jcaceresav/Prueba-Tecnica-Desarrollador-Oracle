CREATE OR REPLACE TRIGGER TRG_MAYUSCU
AFTER INSERT OR UPDATE ON PERSONAS
   FOR EACH ROW

DECLARE
   vNombre VARCHAR2(25);
   vApellido VARCHAR2(25);

BEGIN
  SELECT NOMBRES, APELLIDOS
  INTO vNombre, vApellido
  FROM PERSONAS
  WHERE ROWNUM = 1;

EXCEPTION
    WHEN OTHERS THEN DBMS_OUTPUT.PUT_LINE('Ocurrio un error no manejado.');

END;
