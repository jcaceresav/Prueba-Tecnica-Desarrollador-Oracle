CREATE or REPLACE TRIGGER TRG_MAYUSCU
  AFTER INSERT OR UPDATE ON PERSONAS
  REFERENCING OLD AS old_buffer NEW AS new_buffer 
  FOR EACH ROW  

DECLARE
      Operation       NUMBER;
      CustomerCode    CHAR(10 BYTE);
BEGIN

SELECT UPPER(nombres) || " " || UPPER(apellidos)
   FROM personas;

// DO SOMETHING ...

EXCEPTION
    WHEN OTHERS THEN ErrorCode := SQLCODE;

END;
